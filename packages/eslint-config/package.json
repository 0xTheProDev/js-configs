{
  "name": "@theprodev/eslint-config",
  "version": "0.2.0",
  "description": "An Opinionated ESLint Configuration",
  "keywords": [
    "nodejs",
    "web",
    "microservices",
    "typescript",
    "angular",
    "nestjs",
    "nextjs",
    "react",
    "vue"
  ],
  "bugs": {
    "url": "https://github.com/0xTheProDev/js-configs/discussions"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0xTheProDev/js-configs.git"
  },
  "license": "MIT",
  "author": "Progyan Bhattacharya <bprogyan@gmail.com>",
  "main": "lib/eslint.config.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "format": "prettier --check \"./**/*.{cjs,js,json,md,mjs,ts,yaml,yml}\"",
    "format:fix": "prettier --write \"./**/*.{cjs,js,json,md,mjs,ts,yaml,yml}\"",
    "lint": "eslint \"./lib/**/*.{cjs,mjs,js,ts,tsx,json}\"",
    "lint:fix": "eslint \"./lib/**/*.{cjs,mjs,js,ts,tsx,json}\" --fix"
  },
  "prettier": "@theprodev/prettier-config",
  "dependencies": {
    "@eslint/js": "9.7.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-unused-imports": "4.0.1",
    "typescript-eslint": "8.1.0"
  },
  "devDependencies": {
    "@theprodev/tsconfigs": "workspace:*",
    "@types/eslint__js": "8.42.3"
  },
  "peerDependencies": {
    "eslint": "^9",
    "typescript": "^5"
  },
  "publishConfig": {
    "access": "public"
  }
}
